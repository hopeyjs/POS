<!DOCTYPE html>
<html lang="en">
    <% include partials/header %>
<body>
    <div id="wrapper">
        <div id="user-form">
            <div id="add-user">
                <p class="form-title">Add New Customer</p>
                <% if(error){ %>    
                  <p class="err"><%= error %></p>
                <% } %>
                <% if(message){ %>    
                    <p class="msg"><%= message %></p>
                <% } %>
        <form class="form" action="/admin/manage_customers/add_customer" method="POST">
            <div class="col-auto">
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <div class="input-group-text">@</i></div>
                </div>
            <input type="text" class="form-control" name="firstName" placeholder="First Name" required>
                </div>
            </div>
            <div class="col-auto">
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="far fa-user"></i></div>
                </div>
            <input type="text" class="form-control" name="lastName" placeholder="Last Name" required>
                </div>
            </div>
            <div class="col-auto">
                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-lock"></i></div>
                </div>
            <input type="text" class="form-control" name="phone" placeholder="Phone Number" required>
                </div>
            </div>
            <div class="col-auto">
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-lock"></i></div>
                </div>
            <input type="email" class="form-control" name="email" placeholder="Email Address" required>
                </div>
            </div>
            <div class="col-auto">
                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-lock"></i></div>
                </div>
            <input type="text" class="form-control" name="address" placeholder="Address" required>
                </div>
            </div>
            <div class="user-form-footer ">
                <button type="submit" class="btn btn-outline-success" type="submit">Add Customer</button>
            </div>
        </form>
            </div>
            <div id="manage-user">
                <p class="form-title">Manage Customers</p>
                    <div>
                        <table class="table table-striped table-hover">
                            <thead>
                            <tr>
                                <th scope="col">First Name</th>
                                <th scope="col">Last Name</th>
                                <th scope="col">Phone</th>
                                <th scope="col">Email</th>
                                <th scope="col">Address</th>

                            </tr>
                            </thead>
                        <tbody>
                    <% for(customer of customers){ %>
                        <tr>
                            <th scope="row"><%= customer.firstName%></th>
                            <td><%= customer.lastName %></td>
                            <td><%= customer.Phone %></td>
                            <td><%= customer.email %></td>
                            <td><%= customer.address %></td>
                        </tr>
                    <% } %>
                        </tbody>
                        </table>
                </div>                
            </div>
        </div>
    </div>
<div>
    <div>
       <footer id="footer">
          <% include partials/footer %>
       </footer>
    </div>
</div>
</body>
</html>