<!DOCTYPE html>
<html lang="en">
    <% include partials/header %>
<body>
    <div id="wrapper">
        <div id="user-form">
            <div id="add-user">
                <p class="form-title">Add New User</p>
                <% if(error){ %>    
                  <p class="err"><%= error %></p>
                <% } %>
                <% if(message){ %>    
                    <p class="msg"><%= message %></p>
                <% } %>
        <form class="form" action="/admin/manage_users/add_user" method="POST">
            <div class="col-auto">
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <div class="input-group-text">@</i></div>
                </div>
            <input type="text" class="form-control" name="username" placeholder="Username" required minlength="3">
                </div>
            </div>
            <div class="col-auto">
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="far fa-user"></i></div>
                </div>
            <input type="text" class="form-control" name="fullName" placeholder="Full Name" required>
                </div>
            </div>
            <div class="col-auto">
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="far fa-envelope"></i></div>
                </div>
            <input type="email" class="form-control" name="email" placeholder="Email" required>
                </div>
            </div>
            <div class="col-auto">
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-spinner"></i></div>
                </div>
                <select required name="role" class="form-control">
                    <option value="" diasbled>Select a Role</option>
                    <option value="Admin">Admin</option>
                    <option value="Manager">Manager</option>
                    <option value="Supervisor">Supervisor</option>
                    <option value="Sales Rep">Sales Rep</option>
                </select>
            </div>
            </div>
            <div class="col-auto">
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-lock"></i></div>
                </div>
            <input type="password" class="form-control" name="password" placeholder="Password" required minlength="6">
                </div>
            </div>
            <div class="form-footer">
                <button type="submit" class="btn btn-outline-success" type="submit">Add User</button>
            </div>
        </form>
            </div>
            <div id="manage-user">
                <p class="form-title">Manage Users</p>
                    <div>
                        <table class="table table-striped table-hover">
                            <thead>
                            <tr>
                                <th scope="col">Username</th>
                                <th scope="col">Full Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Role</th>
                            </tr>
                            </thead>
                        <tbody>
                    <% for(user of users){ %>
                        <tr>
                            <th scope="row"><%= user.username %></th>
                            <td><%= user.fullName %></td>
                            <td><%= user.email %></td>
                            <td><%= user.role %></td>
                        </tr>
                    <% } %>
                        </tbody>
                        </table>
                </div>                
            </div>
        </div>
    </div>
<div>
    <div>
       <footer id="footer">
          <% include partials/footer %>
       </footer>
    </div>
</div>
</body>
</html>